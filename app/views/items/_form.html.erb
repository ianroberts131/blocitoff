<h3>New Item</h3>
  <div class="row">
    <div class="col-md-6">
      <%= form_for(item, url: items_path) do |f| %>
        <div class="form-group">
          <%= f.label :item %><br />
          <%= f.text_field :name, class: "form-control", placeholder: "Enter new item" %>
        </div>
        <%= f.submit "Add Item", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>  